        function SendReminderToEmail() {

            
           var email_recipient =  $("#EmailReminder-Email").val();
           var email_content = $("#EmailReminder-EmailMsg").val();

           var result =  $("/Receivables/ArMgt/SendEmailReminder",
                { recipient: email_recipient, emailMessage: email_content },
                (result) => {

                    console.log(result);
                }
            );

            console.log(result);
        }



